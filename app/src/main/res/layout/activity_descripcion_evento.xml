<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_descripcion_evento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coppate.g04.coppate.DescripcionEvento"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_weight="0.94">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">

                    <TextView
                        android:text="Descripción del evento del usuario XXX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/de_usuario_creador"
                        android:textColor="@color/negro"
                        android:layout_weight="3.14" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="DESCRIPCIÓN DEL EVENTO."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="false"
                        android:textColor="@color/negro"
                        android:id="@+id/de_descrip_evento"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="101dp"
                    android:layout_height="130dp"
                    android:id="@+id/de_ubicacion_mapa"
                    android:background="@drawable/crear11"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_weight="0.30">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="204dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:src="@drawable/foto_perfil"
                    android:id="@+id/de_foto_perfil"
                    android:layout_weight="1"
                     />

                <TextView
                    android:text="Usuario XXXX. Haga click en la imagen para ver las calificaciones de este usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/de_txv_usuario"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:padding="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:src="@drawable/estrella_vacia"
                    android:id="@+id/de_calif_total"
                    android:layout_weight="1" />

                <TextView
                    android:text="Puntuacion del Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/de_puntuacion"
                    android:layout_weight="1"
                    android:textColor="@color/negro"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textAlignment="center">

            <Button
                android:text="Cancelar Asistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:id="@+id/de_cancelar_asistencia"
                android:layout_weight="1"
                android:background="@drawable/bordemensajes"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:textAlignment="center" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
