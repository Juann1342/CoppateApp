<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout android:id="@+id/tab2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="Buscar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/ma_botonBuscar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/btncambia"
                android:textSize="12sp" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/ma_botonMapa"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/btncambia"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView android:id="@+id/ma_lista_eventos_cercanos"
            android:text="Lista de eventos cercanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ListView
            android:id="@+id/ma_lv_eventos_cercanos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</RelativeLayout>