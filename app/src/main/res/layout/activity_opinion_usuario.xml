<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_centerInParent="true"
        android:elevation="0dp">

        <TextView
            android:text="Calificaciones de Usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ou_texto_calificacion"
            tools:textStyle="bold"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:textAlignment="center"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Puntuacion General del Usuario: XXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_weight="1"
            android:textColor="@color/negro"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        android:minHeight="0dp"
        android:minWidth="0dp">

        <ImageView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/foto_perfil"
            android:id="@+id/ou_perfil_pict" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                app:srcCompat="@drawable/estrella_vacia"
                android:id="@+id/ou_calif_total" />

            <TextView
                android:text="Puntuacion total:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:id="@+id/ou_txt_puntuacion" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <TextView
            android:text="Comentarios de Otros usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ou_coment_usuarios"
            android:textColor="@color/negro"
            android:layout_weight="0.01" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:id="@+id/ou_lista_comentarios"
            android:layout_weight="0.03" />

        <Button
            android:text="Calificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ou_btn_calificar"
            android:background="@drawable/btncambia"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>