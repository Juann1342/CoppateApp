<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.coppate.g04.coppate.CrearEvento">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ce_nameEvent"
        android:hint="Nombre del Evento"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ce_lugarEncuentro"
        android:hint="Lugar de Encuentro"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/ce_nameEvent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ce_nameEvent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="4"
        android:id="@+id/ce_fecha_evento"
        android:hint="Fecha"
        app:layout_constraintLeft_toLeftOf="@+id/ce_costo_evento"
        app:layout_constraintTop_toBottomOf="@+id/ce_costo_evento"
        android:minWidth="60dip" />

    <Button
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="4"
        android:id="@+id/btn_time"
        android:hint="Hora"
        android:minWidth="60dip"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/in_date"
        app:layout_constraintLeft_toRightOf="@+id/in_date" />

    <EditText
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:ems="10"
        android:id="@+id/in_date"
        android:hint="Fecha"
        app:layout_constraintLeft_toRightOf="@+id/ce_fecha_evento"
        app:layout_constraintTop_toBottomOf="@+id/ce_costo_evento" />

    <EditText
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:ems="5"
        android:id="@+id/in_time"
        android:hint="Hora"
        app:layout_constraintTop_toTopOf="@+id/btn_time"
        app:layout_constraintLeft_toRightOf="@+id/btn_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/ce_cupoMin"
        android:hint="Cupo Min"
        app:layout_constraintTop_toBottomOf="@+id/ce_fecha_evento"
        app:layout_constraintLeft_toLeftOf="@+id/ce_fecha_evento" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/ce_cupoMax"
        android:hint="Cupo Max"
        app:layout_constraintTop_toBottomOf="@+id/in_date"
        app:layout_constraintLeft_toRightOf="@+id/ce_cupoMin" />

    <EditText
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ce_edadDesde"
        android:hint="Edad Min"
        app:layout_constraintTop_toBottomOf="@+id/ce_cupoMin"
        app:layout_constraintLeft_toLeftOf="@+id/ce_cupoMin"  />

    <EditText
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ce_edadHasta"
        android:hint="Edad Max"
        app:layout_constraintLeft_toRightOf="@+id/ce_edadDesde"
        app:layout_constraintTop_toBottomOf="@+id/ce_cupoMax" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ce_descripEvent"
        android:hint="Descripcion del Evento"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ce_lugarEncuentro"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ce_lugarEncuentro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Evento"
        android:id="@+id/ce_btnCrearEvento"
        android:onClick="CrearEvento"
        android:background="@drawable/btncambia"
        android:textColor="@color/colorPrimary"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:layout_width="122dp"
        android:layout_height="42dp"
        android:id="@+id/ce_spnTipoEvento"
        android:textAlignment="viewStart"
        android:prompt="@string/title01"
        app:layout_constraintTop_toBottomOf="@+id/ce_spnSexoEvento"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/ce_spnSexoEvento"
        android:textAlignment="viewStart"
        android:layout_height="43dp"
        android:layout_width="133dp"
        android:prompt="@string/title01"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ce_costo_evento"
        android:hint="Costo para mostrar"
        app:layout_constraintLeft_toLeftOf="@+id/ce_descripEvent"
        app:layout_constraintTop_toBottomOf="@+id/ce_descripEvent" />

    <TextView
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tipo: "
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/ce_edadHasta"
        app:layout_constraintLeft_toRightOf="@+id/ce_edadHasta" />

    <TextView
        android:layout_height="43dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sexo:"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/ce_cupoMax"
        app:layout_constraintTop_toBottomOf="@+id/btn_time"
        android:layout_width="0dp" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:text="Contacto Seleccionado: "
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/ce_edadDesde"
        app:layout_constraintTop_toBottomOf="@+id/ce_edadDesde" />

    <Spinner
        android:layout_width="168dp"
        android:layout_height="37dp"
        android:id="@+id/ce_spn_contactos_activos"
        app:layout_constraintTop_toBottomOf="@+id/ce_spnTipoEvento"
        app:layout_constraintLeft_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="216dp"
        android:layout_height="37dp"
        android:id="@+id/ce_lista_coppados"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:layout_width="216dp"
        android:layout_height="31dp"
        android:text="Numero: "
        android:id="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/ce_lista_coppados"
        app:layout_constraintLeft_toLeftOf="@+id/ce_lista_coppados" />
    <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ce_lista_coppados2"
            tools:layout_editor_absoluteY="379dp"
            tools:layout_editor_absoluteX="146dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ce_lista_coppados22"
            tools:layout_editor_absoluteY="367dp"
            tools:layout_editor_absoluteX="242dp" />
    -->
    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/crearEventoMapa"
        android:background="@drawable/pin11"
        android:textColor="@color/colorPrimary"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="31dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp"
        app:layout_constraintGuide_percent="0.052083332" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
