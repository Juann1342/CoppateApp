<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buscar_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coppate.g04.coppate.BuscarEvento"
    android:background="@color/cardview_light_background">


    <TextView
        android:text="Buscar Evento"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:id="@+id/buscar_evento"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:contentDescription="Buscar Evento" />

    <TextView
        android:text="Sexo"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:id="@+id/textView10"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:id="@+id/spinner_sexo"
        app:layout_constraintRight_toRightOf="@+id/fecha"
        app:layout_constraintLeft_toLeftOf="@+id/fecha"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:text="Fecha"
        android:layout_width="112dp"
        android:layout_height="26dp"
        android:id="@+id/textView7"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/edad_desde"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edad_hasta"
        app:layout_constraintTop_toTopOf="@+id/edad_hasta" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/edad_hasta"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buscar"
        android:layout_marginBottom="24dp" />

    <TextView
        android:text="edad desde"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:id="@+id/textView6"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:id="@+id/buscar"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:typeface="serif"
        android:background="@drawable/btncambia"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Edad hasta"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:id="@+id/textView8"
        app:layout_constraintRight_toRightOf="@+id/edad_hasta"
        app:layout_constraintBottom_toTopOf="@+id/edad_hasta"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Tipo"
        android:layout_height="29dp"
        android:id="@+id/textView9"
        android:layout_width="64dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView10" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/spinner_tipo"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_sexo"
        app:layout_constraintRight_toRightOf="@+id/spinner_sexo"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="dd/mm/aa"
        android:ems="10"
        android:id="@+id/fecha"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0"
        android:layout_width="150dp"
        app:layout_constraintRight_toRightOf="@+id/textView8" />

    <Button
        android:text="Ingresar Codigo"
        android:layout_width="wrap_content"
        android:id="@+id/be_ingresar_codigo"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:typeface="serif"
        android:background="@drawable/btncambia"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="163dp" />

    <EditText
        android:layout_width="199dp"
        android:layout_height="0dp"
        android:inputType="number"
        android:hint="Ingrese aqui el codigo"
        android:ems="10"
        android:id="@+id/be_txt_ingresar_codigo"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/buscar_evento"
        app:layout_constraintTop_toTopOf="@+id/buscar_evento"
        app:layout_constraintRight_toRightOf="@+id/spinner_tipo" />


</android.support.constraint.ConstraintLayout>

