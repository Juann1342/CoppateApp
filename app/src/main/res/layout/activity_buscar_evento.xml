<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buscar_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coppate.g04.coppate.buscar_evento">


    <TextView
        android:text="Buscar Evento"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:id="@+id/buscar_evento"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buscar_evento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="74dp"
        android:id="@+id/radio_tipo" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_tipo"
        android:layout_alignBottom="@+id/radio_tipo"
        android:layout_toRightOf="@+id/radio_tipo"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignRight="@+id/buscar_evento"
        android:layout_alignEnd="@+id/buscar_evento" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buscar_evento"
        android:layout_alignEnd="@+id/buscar_evento"
        android:layout_marginBottom="26dp"
        android:id="@+id/buscar" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_sexo"
        android:layout_alignBottom="@+id/radio_sexo"
        android:layout_alignLeft="@+id/spinner_tipo"
        android:layout_alignStart="@+id/spinner_tipo"
        android:layout_alignRight="@+id/spinner_tipo"
        android:layout_alignEnd="@+id/spinner_tipo" />

    <RadioButton
        android:text="Sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_sexo"
        android:layout_below="@+id/radio_tipo"
        android:layout_alignLeft="@+id/radio_tipo"
        android:layout_alignStart="@+id/radio_tipo"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="edad hasta"
        android:ems="10"
        android:id="@+id/edad_hasta"
        android:layout_marginBottom="29dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/buscar"
        android:layout_alignEnd="@+id/buscar"
        android:layout_alignLeft="@+id/spinner_sexo"
        android:layout_alignStart="@+id/spinner_sexo" />

    <TextView
        android:text="Edad desde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/buscar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="edad desde"
        android:ems="10"
        android:id="@+id/edad_desde"
        android:layout_alignBaseline="@+id/edad_hasta"
        android:layout_alignBottom="@+id/edad_hasta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/spinner_tipo"
        android:layout_toStartOf="@+id/spinner_tipo" />

    <TextView
        android:text="edad desde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="fecha"
        android:ems="10"
        android:id="@+id/fecha"
        android:layout_below="@+id/spinner_sexo"
        android:layout_alignLeft="@+id/buscar_evento"
        android:layout_alignStart="@+id/buscar_evento"
        android:layout_marginTop="23dp" />


</RelativeLayout>

