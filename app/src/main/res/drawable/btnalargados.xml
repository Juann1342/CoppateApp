<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
            <solid android:color="#ff000000"/>
            <corners android:radius="3dp"/>

        </shape>

    </item>

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
            <gradient
                android:startColor="#562f56"
                android:centerColor="#562f56"
                android:endColor="#562f56"
                android:angle="315"/>

        </shape>
    </item>
</selector>